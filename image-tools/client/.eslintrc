{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
		"no-tabs": "off",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
		],
		"vue/html-closing-bracket-spacing": [
			"error",
			{
				"startTag": "never",
				"endTag": "never",
				"selfClosingTag": "never"
			}
		],
		"vue/html-indent": [
			"error",
			"tab"
		],
		"vue/html-quotes": [
			"error",
			"single"
		],
		"vue/multi-word-component-names": [
			"error",
			{
				"ignores": ["default", "index", "new", "[id]"]
			}
		]
	}
}
